<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/_8dp"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/note"
        android:textColor="@color/colorPrimary" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="@dimen/_4dp"
        android:orientation="horizontal">


        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/img_1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/_4dp"
                android:layout_marginLeft="@dimen/_4dp"
                android:layout_marginRight="@dimen/_2dp"
                android:layout_marginTop="@dimen/_4dp"
                android:background="@drawable/bg_register_image"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_camara" />

            <ImageView
                android:id="@+id/btn_delete_image"
                android:layout_width="@dimen/_24dp"
                android:layout_height="@dimen/_24dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="@dimen/_4dp"
                android:layout_marginRight="@dimen/_2dp"
                android:src="@drawable/ic_close" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/img_2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/_4dp"
            android:layout_marginLeft="@dimen/_2dp"
            android:layout_marginRight="@dimen/_2dp"
            android:layout_marginTop="@dimen/_4dp"
            android:layout_weight="1"
            android:background="@drawable/bg_register_image"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_camara" />

        <ImageView
            android:id="@+id/img_3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/_4dp"
            android:layout_marginLeft="@dimen/_2dp"
            android:layout_marginRight="@dimen/_4dp"
            android:layout_marginTop="@dimen/_4dp"
            android:layout_weight="1"
            android:background="@drawable/bg_register_image"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_camara" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/_4dp"
            android:layout_marginLeft="@dimen/_4dp"
            android:layout_marginRight="@dimen/_2dp"
            android:layout_marginTop="@dimen/_4dp"
            android:layout_weight="1"
            android:background="@drawable/bg_register_image"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_camara" />

        <ImageView
            android:id="@+id/img_5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/_4dp"
            android:layout_marginLeft="@dimen/_2dp"
            android:layout_marginRight="@dimen/_2dp"
            android:layout_marginTop="@dimen/_4dp"
            android:layout_weight="1"
            android:background="@drawable/bg_register_image"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_camara" />

        <ImageView
            android:id="@+id/img_6"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/_4dp"
            android:layout_marginLeft="@dimen/_2dp"
            android:layout_marginRight="@dimen/_4dp"
            android:layout_marginTop="@dimen/_4dp"
            android:layout_weight="1"
            android:background="@drawable/bg_register_image"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_camara" />
    </LinearLayout>
</LinearLayout>