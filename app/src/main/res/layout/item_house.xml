<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/_8dp"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="@dimen/_8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_score_medium"
            android:layout_width="@dimen/_40dp"
            android:layout_height="@dimen/_40dp"
            android:background="@drawable/bg_score"
            android:gravity="center"
            android:text="0"
            android:textColor="@color/white"
            android:textSize="@dimen/_14dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_12dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_landlord"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Minh Hải"
                android:textColor="@color/black"
                android:textSize="@dimen/_14dp" />

            <TextView
                android:id="@+id/txt_update_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ngày 08 tháng 04 lúc 22:45"
                android:textColor="@color/divider"
                android:textSize="@dimen/_12dp"
                android:textStyle="italic" />
        </LinearLayout>

        <TextView
            android:id="@+id/txt_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_2dp"
            android:drawableLeft="@drawable/ic_place_black_24dp"
            android:drawablePadding="@dimen/_2dp"
            android:text=" 5 km"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="@dimen/_14dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_house"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_4dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_2dp"
            android:text="Số nhà 19, ngách 56/46 phố Lê Văn Hiến, Từ Liêm Hà Nội"
            android:textColor="@color/black"
            android:textSize="@dimen/_14dp" />

        <TextView
            android:id="@+id/txt_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_2dp"
            android:text="Giá phòng: 2.000.000 đ"
            android:textColor="@color/black"
            android:textSize="@dimen/_14dp" />

        <TextView
            android:id="@+id/txt_acreage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_2dp"
            android:text="Điên tích: 18 m2"
            android:textColor="@color/black"
            android:textSize="@dimen/_14dp" />

        <ImageView
            android:id="@+id/img_image"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_180dp"
            android:layout_marginTop="@dimen/_4dp"
            android:scaleType="centerCrop"
            android:src="@drawable/nhatro1" />

        <Button
            android:id="@+id/btn_contact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_5dp"
            android:layout_marginTop="@dimen/_4dp"
            android:background="@drawable/btn_radius_house"
            android:drawableLeft="@drawable/ic_local_phone_white_24dp"
            android:text="@string/lien_he_ngay"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/_14dp"
            android:visibility="gone" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_total_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_insert_comment_black_24dp"
            android:drawablePadding="@dimen/_5dp"
            android:text="0"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/txt_total_images"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_8dp"
            android:drawableLeft="@drawable/ic_photo_camera_black_24dp"
            android:drawablePadding="@dimen/_5dp"
            android:text="0"
            android:textAlignment="center" />
    </LinearLayout>
</LinearLayout>