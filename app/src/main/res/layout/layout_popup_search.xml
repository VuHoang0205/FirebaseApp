<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/_12dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Tìm kiếm thông tin nhà trọ theo bộ lọc dưới"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/_18dp" />

    <TextView
        android:id="@+id/txt_popup_distance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_32dp"
        android:text="Trong bán kính"
        android:textColor="@color/colorPrimary" />

    <SeekBar
        android:id="@+id/sb_distance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_12dp"
        android:max="30" />

    <TextView
        android:id="@+id/txt_popup_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_16dp"
        android:text="Giá phòng lớn hơn 1 triệu"
        android:textColor="@color/colorPrimary" />

    <SeekBar
        android:id="@+id/sb_prices"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_12dp"
        android:max="10" />

    <TextView
        android:id="@+id/txt_popup_acrage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_16dp"
        android:text="Diên tích lớn hơn 20 mét vuông"
        android:textColor="@color/colorPrimary" />

    <SeekBar
        android:id="@+id/sb_acreage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_12dp"
        android:max="50" />

    <Button
        android:id="@+id/btn_ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_12dp"
        android:background="@drawable/btn_dang_tin"
        android:text="Áp dụng"
        android:textColor="@color/white" />
</LinearLayout>