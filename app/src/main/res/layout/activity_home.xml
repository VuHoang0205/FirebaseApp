<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/ll_home"
    android:background="@color/background"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/home_color">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="@dimen/_24dp"
            android:layout_height="@dimen/_24dp"
            android:src="@drawable/user" />

        <RadioGroup
            android:id="@+id/rd_house_place"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/custom_bg_radio_button_group"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rd_house"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_radio_house"
                android:button="@android:color/transparent"
                android:checked="true"
                android:padding="@dimen/_10dp"
                android:text="@string/house"
                android:textColor="@drawable/change_text_radio" />

            <RadioButton
                android:id="@+id/rd_place"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_radio_place"
                android:button="@android:color/transparent"
                android:padding="@dimen/_10dp"
                android:text="@string/place"
                android:textColor="@drawable/change_text_radio" />
        </RadioGroup>

        <ImageView
            android:layout_width="@dimen/_24dp"
            android:layout_height="@dimen/_24dp"
            android:layout_gravity="right"
            android:layout_marginRight="@dimen/_12dp"
            android:src="@drawable/ic_add_white_24dp" />
    </android.support.v7.widget.Toolbar>

    <android.support.v4.view.ViewPager
        android:id="@+id/vpg_home"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v4.view.ViewPager>
</LinearLayout>