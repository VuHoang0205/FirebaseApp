<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background"
        android:orientation="vertical">

        <fragment
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50dp"
            android:layout_marginLeft="@dimen/_10dp"
            android:layout_marginRight="@dimen/_48dp"
            android:layout_marginTop="@dimen/_10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_search"
                android:layout_width="@dimen/_40dp"
                android:layout_height="@dimen/_40dp"
                android:layout_gravity="center_vertical"
                android:elevation="@dimen/_10dp"
                android:src="@drawable/ic_search" />

            <EditText
                android:id="@+id/edt_address"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50dp"
                android:background="@drawable/edt_search"
                android:hint="@string/nhap_khu_vuc"
                android:paddingLeft="@dimen/_4dp"
                android:singleLine="true"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/txt_16sp"
                android:visibility="gone" />
        </LinearLayout>

        <TextView
            android:id="@+id/txt_total_search"
            android:layout_width="@dimen/_48dp"
            android:layout_height="@dimen/_80dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:elevation="@dimen/_10dp"
            android:gravity="center"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/_14dp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/ll_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="@dimen/_140dp"
            android:elevation="@dimen/_10dp"
            android:orientation="vertical"
            android:padding="@dimen/_12dp">

            <TextView
                android:id="@+id/txt_place_distance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="@string/tim_theo_khoang_cach"
                android:textColor="@color/colorPrimary" />

            <TextView
                android:id="@+id/txt_place_content_search"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="Bộ lọc"
                android:textColor="@color/colorPrimary" />
        </LinearLayout>
    </RelativeLayout>

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/bottom_sheet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background"
        android:clipToPadding="true"
        android:visibility="gone"
        app:layout_behavior="android.support.design.widget.BottomSheetBehavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rcv_house_search"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbarSize="@dimen/_2dp"
                android:scrollbarStyle="insideInset"
                android:scrollbarThumbVertical="@color/home_color"
                android:scrollbars="vertical" />
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</android.support.design.widget.CoordinatorLayout>
